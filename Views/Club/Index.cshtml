@model IEnumerable<Club>
@using MvcMovie.Data
@{

}

<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">
            @foreach(var item in Model){
            <div class="col-md-4">
                <div class="card mb-4 box-shadow">
                    <img class="card-img-top"
                        data-src="holder.js/100px225?theme=thumb&amp;bg=55595c&amp;fg=eceeef&amp;text=Thumbnail"
                        alt="Thumbnail [100%x225]"
                        src="@item.Image"
                        data-holder-rendered="true" style="height: 225px; width: 100%; display: block;">
                    <div class="card-body">
                        <p class="card-text">@item.Title</p>
                        <p class="card-text">@item.Description</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a type="button" class="btn btn-sm btn-outline-secondary" asp-controller="club" asp-action="detail" asp-route-id="@item.Id">View</a>
                                @if(User.Identity.IsAuthenticated && User.IsInRole("admin")){
                                    <a type="button" class="btn btn-sm btn-outline-secondary" asp-controller="club" asp-action="edit" asp-route-id="@item.Id">Edit</a>
                                }
                            </div>
                                <small class="text-muted" >@item.ClubCategory</small>
                        </div>
                    </div>
                </div>
             </div>
            }
    </div>
</div>
</div>